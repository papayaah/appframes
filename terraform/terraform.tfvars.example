# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control!

# Server IP address (must be already provisioned with Docker/Nginx)
server_ip = ""

# Full domain for the service
domain = ""  # e.g., "myapp.example.com"

# App configuration
app_name = ""  # e.g., "myapp" (used for nginx config and /srv/{app_name})
app_port = 0   # e.g., 9000 (internal port Docker exposes to 127.0.0.1:port)

# Path to your SSH private key
ssh_private_key_path = "~/.ssh/id_rsa"

# Cloudflare DNS (optional)
enable_cloudflare_dns = true
cloudflare_api_token  = ""
cloudflare_proxy_enabled = true
cloudflare_zone_id = ""
